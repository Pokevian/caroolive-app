<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.pokevian.app.smartfleet.ui.driving.ValueView
            android:id="@+id/value_11"
            android:layout_width="160dp"
            android:layout_height="46dp"
            android:background="@drawable/center_infor" />

        <com.pokevian.app.smartfleet.ui.driving.ValueView
            android:id="@+id/value_12"
            android:layout_width="160dp"
            android:layout_height="46dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/center_infor" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.pokevian.app.smartfleet.ui.driving.ValueView
            android:id="@+id/value_13"
            android:layout_width="160dp"
            android:layout_height="46dp"
            android:background="@drawable/center_infor" />

        <com.pokevian.app.smartfleet.ui.driving.ValueView
            android:id="@+id/value_21"
            android:layout_width="160dp"
            android:layout_height="46dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/center_infor" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.pokevian.app.smartfleet.ui.driving.ValueView
            android:id="@+id/value_22"
            android:layout_width="160dp"
            android:layout_height="46dp"
            android:background="@drawable/center_infor" />

        <com.pokevian.app.smartfleet.ui.driving.ValueView
            android:id="@+id/value_23"
            android:layout_width="160dp"
            android:layout_height="46dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/center_infor" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.pokevian.app.smartfleet.ui.driving.ValueView
        android:id="@+id/value_31"
        android:layout_width="330dp"
        android:layout_height="58dp"
        android:background="@drawable/bg_value_dark_large_disabled"
        app:viewLayout="@layout/widget_value_large" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.pokevian.app.smartfleet.ui.driving.ValueView
        android:id="@+id/value_32"
        android:layout_width="330dp"
        android:layout_height="58dp"
        android:background="@drawable/bg_value_dark_large_disabled"
        app:viewLayout="@layout/widget_value_large" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.pokevian.app.smartfleet.ui.driving.ValueView
        android:id="@+id/value_33"
        android:layout_width="330dp"
        android:layout_height="58dp"
        android:background="@drawable/bg_value_dark_large_disabled"
        app:viewLayout="@layout/widget_value_large" />
</LinearLayout>
